{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wakey",
  "version": "0.1.0",
  "identifier": "com.wakey.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5678",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Waeky-Waeky",
        "width": 500,
        "height": 600,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "tray": {
      "iconPath": "../public/tauri.svg", 
      "tooltip": "My Tauri App",
      "menu": [
        {
          "id": "quit",
          "label": "Quit",
          "role": "quit"
        }
      ]
    }
  }
}
